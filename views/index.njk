{% extends 'layout.njk' %}

{% block head %}
    <title>Home</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <img src="{{ content.avatar_url }}" alt="{{ content.title }}-logo">
        <h2> {{ content.title }} </h2>
        <h3> {{ content.description }} </h3>

        <div class="list">
            <ul>
                {% for list in content.lists %}
                    <li> {{ list.name }} </li>
                {% endfor %}
            </ul>
        </div>

    </div>
{% endblock %}

{% block footer %}
    <footer>
        <div id="links-footer" class="links">
            {% for link in content.links %}
                <a href=" {{link.url}} " target="_blank"> {{ link.name }} </a>
            {% endfor %}
        </div>
    </footer>
{% endblock %}